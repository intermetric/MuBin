#: import Frontend Frontend
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton


<MainMenuScreen>:
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: "background.png"
	FloatLayout:
		Button:
			background_normal: "music_button.png"
			on_release: root.manager.current = "music"
			pos_hint: {"x": 0.25, "top": 0.6}
			size_hint: 0.1, 0.12
		Button:
			background_normal: "folder_button.png"
			on_release: root.manager.current = "file_chooser"
			pos_hint: {"x": 0.45, "top": 0.6}
			size_hint: 0.1, 0.12
		Button:
			background_normal: "SC_button.png"
			on_release: root.manager.current = "soundcloud"
			pos_hint: {"x": 0.65, "top": 0.59}
			size_hint: 0.1, 0.12


<MusicScreen>:
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: "background.png"
    FloatLayout:
    	Button:
			background_normal: "previous_button.png"
			pos_hint: {"x": 0.26, "top": 0.92}
			size_hint: 0.080, 0.105
    	Button:
			background_normal: "play_button.png"
			pos_hint: {"x": 0.35, "top": 0.92}
			size_hint: 0.080, 0.105
			on_press: root.playMusic()
    	Button:
			background_normal: "pause_button.png"
			pos_hint: {"x": 0.44, "top": 0.92}
			size_hint: 0.080, 0.105
			on_press: root.pauseMusic()
		Button:
			background_normal: "stop_button.png"
			pos_hint: {"x": 0.53, "top": 0.92}
			size_hint: 0.080, 0.105
			on_press: root.insertToDatabase()

		Button:
			background_normal: "next_button.png"
			pos_hint: {"x": 0.62, "top": 0.92}
			size_hint: 0.080, 0.105
		Button:
			background_normal: "back_button.png"
			pos_hint: {"x": 0.90, "top": 0.92}
			size_hint: 0.080, 0.105
			on_release: root.manager.current = "main_menu"
		Label:
			pos_hint: {"x": 0.33, "top": 0.90}
			size_hint: 0.3, 0.3
			text: str(root.soundName)
			color: 0, 0, 0, 1
			font_size: dp(30)
    ListView:
        size_hint_y: .675
        adapter:
            ListAdapter(data=root.sound_data,
            selection_mode='single',
            allow_empty_selection=False,
            cls=Frontend.PlaylistButton)
        canvas.before:
            Color:
                rgb: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
    Label:
        size_hint_y: .1
        canvas.before:
            Color:
                rgb: 0, .5, 1
            Rectangle:
                pos: self.pos
                size: self.size
        text: "ADVERTISEMENT: https://github.com/muruw/Music-player"

<PlaylistButton>:
    on_press: root.get_button_index(self.index)

<FileChooserScreen>:
    label: label
    orientation: 'vertical'
    BoxLayout:
        FileChooserIconView:
            canvas.before:
                Color:
                    rgb: 0.15, 0.15, 0.15, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            on_selection: root.selectFile(*args)
    BoxLayout:
		orientation: "horizontal"
		Label:
			id: label
			size_hint_y: .1
			size_hint_x: .7
			canvas.before:
				Color:
					rgb: 0, 0, 0, 1
				Rectangle:
					pos: self.pos
					size: self.size
		Button:
			size_hint_y: .1
			size_hint_x: .3
			background_normal: ''
			background_color: 1, 1, 1, 1
			text: "Choose"
			color:  0, 0, 0, 1
			on_press: root.manager.current = "main_menu"