<MainMenuScreen>:
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: "background.png"
	FloatLayout:
		Button:
			background_normal: "play_button.png"
			on_release: root.manager.current = "music"
			size_hint: 0.15, 0.15
			pos_hint: {"x": 0.15, "top": 0.5}
			
		Button:
			background_normal: "audio_button.png"
			on_release: root.manager.current = "file_chooser"
			size_hint: 0.1, 0.15
			pos_hint: {"x": 0.4, "top": 0.5 }
			
		Button:
			background_normal: "delete_button.png"
			pos_hint: {"x": 0.65, "top": 0.5}
			size_hint: 0.15, 0.15
		Label:
			pos_hint: {"x": 0.33, "top": 0.9}
			size_hint: 0.3, 0.3
			text: "Music Player"
			color: 0.1333, 0.694, 0.302, 1
			font_size: dp(30)
			
			
<MusicScreen>:
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: "background.png"
	FloatLayout:
		Button:
			background_normal: "play_button.png"
			pos_hint: {"x": 0.15, "top": 0.5}
			size_hint: 0.15, 0.15
			on_press: root.playMusic()
		Button:
			background_normal: "pause_button.png"
			pos_hint: {"x": 0.4, "top": 0.5}
			size_hint: 0.15, 0.15
			on_press: root.pauseMusic()
		Button:
			background_normal: "delete_button.png"
			pos_hint: {"x": 0.65, "top": 0.5}
			size_hint: 0.15, 0.15
			on_release: root.manager.current = "main_menu"
		Label:
			pos_hint: {"x": 0.33, "top": 0.9}
			size_hint: 0.3, 0.3
			text: str(root.soundName)
			color: 0.1333, 0.694, 0.302, 1
			font_size: dp(30)
		
				
					
			
<FileChooserScreen>:
    label: label
    orientation: 'vertical'
    BoxLayout:
        FileChooserIconView:
            canvas.before:
                Color:
                    rgb: .5,.4,.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            on_selection: root.selectFile(*args)
    Label:
        id: label
        size_hint_y: .1
        canvas.before:
            Color:
                rgb: .5,.5,.4
            Rectangle:
                pos: self.pos
                size: self.size